# GCP Configuration
# REQUIRED: Set your GCP project ID
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# BigQuery Configuration
BIGQUERY_DATASET=aiops_data
BIGQUERY_LOCATION=US

# BigQuery Table Names (defaults shown, customize if needed)
BIGQUERY_TABLE_METRICS_RAW=metrics_raw
BIGQUERY_TABLE_METRICS_AGG_1M=metrics_agg_1m
BIGQUERY_TABLE_LOGS_CLEAN=logs_clean
BIGQUERY_TABLE_ANOMALIES=anomalies
BIGQUERY_TABLE_ACTIONS=actions

# Pub/Sub Topics (defaults shown, customize if needed)
PUBSUB_TOPIC_METRIC_BATCHES=metric_batches
PUBSUB_TOPIC_LOG_ENTRIES=log_entries
PUBSUB_TOPIC_ANOMALY_EVENTS=anomaly_events

# Cloud Storage Buckets (optional)
GCS_BUCKET_MODELS=your-project-models
GCS_BUCKET_DATA=your-project-data

# Service Configuration
SERVICE_NAME=aiops-service
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8080
